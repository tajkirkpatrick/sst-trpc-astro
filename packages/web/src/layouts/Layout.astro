---
import "../styles/globals.css";

interface Props {
  title: string;
}

const { title } = Astro.props;

const session = await Astro.locals.auth.validate();
console.log("session", JSON.stringify(session, null, 2));
console.log("Auth Token", Astro.request.headers.get("Authorization"));

const isLoggedIn = session ? true : false;
console.log("isLoggedIn", isLoggedIn);

if (!Astro.request.headers.get("Authorization") && !isLoggedIn) {
  // for each header log both its name and value
  // prefix each name and value with a label
  console.log(Astro.request.headers);
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
    <nav>
      <ul>
        <li>
          <a href="/signup">Create An Accouont</a>
        </li>
        <li>
          <a href="/login">Sign In</a>
        </li>
        <li>
          <form method="post" action="/logout">
            <button type="submit" value="Sign out">Sign Out</button>
          </form>
        </li>
      </ul>
    </nav>
  </body>
</html>
