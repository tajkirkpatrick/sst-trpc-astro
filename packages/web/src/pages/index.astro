---
import Layout from "@/layouts/Layout.astro";

const session = await Astro.locals.auth.validate();
---

<Layout title="Home">
  <main class="container mx-auto">
    <h1 id="greeting" class="capitalize">
      Welcome {session ? session.user.displayName + "!" : "Unknown User"}
    </h1>
  </main>
</Layout>
